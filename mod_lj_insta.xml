<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0.3" client="site" method="upgrade">
	<name>LJ_Insta</name>
	<author>Liam Hanks</author>
	<creationDate>Februray 2020</creationDate>
	<copyright>Copyright (C) 2005 - 2020 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>liam@liamhanks.com</authorEmail>
	<authorUrl>www.liamhanks.com</authorUrl>
	<version>1.0.3</version>
	<description>Display Instagram posts</description>
	<updateservers>
		<server type="extension" priority="1" name="LJ_Insta Module Updates">https://liamhanks.github.io/mod_lj_insta/extension.xml</server>
	</updateservers>
	<files>
		<filename module="mod_lj_insta">mod_lj_insta.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_custom.ini</language>
		<language tag="en-GB">en-GB.mod_custom.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="api_key" 
					type="text" 
					default=""
				        class="input-block-level"
					label="Instagram User Token"
					description=""
				/>
				<field 
					name="limit" 
					type="integer" 
					default="4" 
					label="Number of posts" 
					description="" 
					first="1" 
					last="20" 
					step="1" 
				/>
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
				<field name="per_row" type="list" default="" label="Number of photos per row" description="" showon="layout:_:grid">
					<option value="12">1</option>
					<option value="6">2</option>
					<option value="4">3</option>
					<option value="3">4</option>
					<option value="2">6</option>
					<option value="1">12</option>
				</field>
				<field name="show_heading" type="radio" default="1" label="Show Instagram logo and username?" description="" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_date" type="radio" default="1" label="Show post date?" description="" class="btn-group btn-group-yesno" showon="layout:_:default,_:stacked">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field type="spacer" name="myspacer" label="It is &lt;b&gt;strongly&lt;/b&gt; recommended that you enable Joomla! caching (even just conservative). &lt;br&gt;The Instagram API limits requests so you should only enable this module without caching if you are certain that you understand the implications! This module &lt;b&gt;does not&lt;/b&gt; self-limit or monitor API call limits, so refreshing this module too often too quickly can lead to your API token being revoked by Instagram." />
			<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					filter="integer"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>
				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
